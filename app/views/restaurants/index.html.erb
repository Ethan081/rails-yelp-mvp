<div class="container">

  <h1>Liste des restaurants</h1>

  <% @restaurants.each do |restaurant| %>
    <h2><%= restaurant.name %></h2>
    <%= link_to 'Voir la fiche du restaurant', restaurant_path(restaurant), class: "btn btn-info"%>
  <% end %>

  <%= link_to 'Ajouter un restaurant', new_restaurant_path, class: "btn btn-warning"%>


</div>


