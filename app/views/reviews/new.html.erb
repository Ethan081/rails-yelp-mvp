<div class="container">

<h1>Create a new review: <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>

  <div class="alert alert-danger">
    <% @review.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
  </div>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-success" %>
<% end %>
<%= link_to 'Retour a la liste', restaurants_path, class: 'btn btn-primary' %>

</div>
