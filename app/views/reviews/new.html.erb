<div class="container">

<h1>Create a new review: <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-success" %>
<% end %>
<%= link_to 'Retour a la liste', restaurants_path, class: 'btn btn-primary' %>

</div>
